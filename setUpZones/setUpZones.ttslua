local setUpZones = {}
local ShowDebug = false
--------------------------------------------------------------------------------
function setUpZones.allSetUpObjects()
    local objs = cast()
    return objs
end

function setUpZones.getByTag(find, setupObjects)
    for k, obj in pairs(setupObjects) do
        if obj.hasTag(find) then
            return obj
        end
    end
    return 'Not Found'
end

function setUpZones.getByTag(find, setupObjects)
    local z = nil
    for k, obj in pairs(setupObjects) do
        if obj.hasTag(find) then
            z = obj
            break
        end
    end
    return z
end
